<script>
  // Load the single widget.js file from localhost:8090 with dynamic access token
  async function loadWidget() {
    console.log("VoiceroAI: Loading widget from localhost:8090");

    try {
      // 1) Prefer Liquid-provided key if available
      var inlineKey = null;
      try {
        if (window.voiceroConfig && typeof window.voiceroConfig.getAccessKey === 'function') {
          inlineKey = window.voiceroConfig.getAccessKey();
        }
      } catch (_) {}

      let accessToken = inlineKey;

      // 2) If no inline key, fallback to storefront-accessible App Proxy endpoint
      if (!accessToken) {
        const response = await fetch('/apps/proxy/access-key', { credentials: 'omit' });
        const data = await response.json();
        if (data && data.success && data.accessKey) {
          accessToken = data.accessKey;
        } else {
          console.error("VoiceroAI: Failed to get access token from proxy API", data);
          return;
        }
      }

      // 3) Load text widget with the resolved token
      console.log("VoiceroAI: Text widget access token:", accessToken);
      const config = {
        // These would be set by the merchant during setup
        SHOPIFY_API_SECRET: "053ef615ccbae33978cbd201ee4dbdbc", // REPLACE WITH ACTUAL SECRET
        SHOP: "{{ shop.permanent_domain }}", // Dynamically get the shop domain
        APP_PROXY_BASE_URL:
          "https://voicero-app-is117a-nj.vercel.app/app/proxy", // Voicero proxy URL
      };
      
      var script = document.createElement('script');
      script.src = "https://voicero-text-frontend.vercel.app/widget.js";
      script.setAttribute('data-token', accessToken);
      script.setAttribute('data-config', JSON.stringify(config));
      script.onload = function() {
        console.log("VoiceroAI: Text widget loaded successfully from voicero-text-frontend.vercel.app");
      };
      script.onerror = function() {
        console.error("VoiceroAI: Failed to load text widget from voicero-text-frontend.vercel.app");
